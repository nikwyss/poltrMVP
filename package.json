{
  "name": "poltr",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@8.0.0",
  "workspaces": [
    "services/*",
    "web/*",
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "pnpm -w install",
    "build": "pnpm -r run build",
    "dev": "echo \"Run service dev scripts individually (see README)\"",
    "postgres-port-forward": "kubectl port-forward -n poltr deployment/allforone-postgres 5432:5432",
    "pds-port-forward": "kubectl port-forward -n poltr svc/pds 2583:80"

  },
  "devDependencies": {
    "concurrently": "^8.0.0"
  }
}