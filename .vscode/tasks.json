{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "AppView: Build and Push",
      "dependsOn": [
        "AppView: Build Image",
        "AppView: Push Image"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "AppView: Build Image",
      "type": "shell",
      "command": "docker build -t nikwyss/poltr-appview:${input:dockerTag} -f ./services/appview/Dockerfile ./services/appview",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "AppView: Push Image",
      "type": "shell",
      "command": "docker push nikwyss/poltr-appview:${input:dockerTag}",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Indexer: Build and Push",
      "dependsOn": [
        "Indexer: Build Image",
        "Indexer: Push Image"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Indexer: Build Image",
      "type": "shell",
      "command": "docker build -t nikwyss/poltr-indexer:${input:dockerTag} -f ./services/indexer/Dockerfile ./services/indexer",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Indexer: Push Image",
      "type": "shell",
      "command": "docker push nikwyss/poltr-indexer:${input:dockerTag}",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ],
  "inputs": [
    {
      "id": "dockerTag",
      "type": "promptString",
      "description": "Docker tag for nikwyss/poltr-appview and indexer",
      "default": "latest"
    }
  ]
}
