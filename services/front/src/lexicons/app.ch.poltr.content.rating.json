{
  "lexicon": 1,
  "id": "app.ch.poltr.content.rating",
  "defs": {
    "main": {
      "type": "record",
      "description": "A rating on poltr content (ballot, argument, post). Includes a 0-100 preference scale. Cross-posted to Bluesky as app.bsky.feed.like when preference > 0.",
      "key": "tid",
      "record": {
        "type": "object",
        "properties": {
          "subject": {
            "type": "ref",
            "ref": "#subject"
          },
          "preference": {
            "type": "integer",
            "description": "Preference indication from 0 (neutral) to 100 (strong support)",
            "minimum": 0,
            "maximum": 100
          },
          "createdAt": {
            "type": "string",
            "format": "datetime"
          }
        },
        "required": ["subject", "preference", "createdAt"]
      }
    },
    "subject": {
      "type": "object",
      "properties": {
        "uri": {
          "type": "string",
          "format": "at-uri"
        },
        "cid": {
          "type": "string",
          "format": "cid"
        }
      },
      "required": ["uri", "cid"]
    }
  }
}
