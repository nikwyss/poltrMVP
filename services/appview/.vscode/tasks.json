{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Python dependencies",
      "type": "shell",
      "command": "pip install -r requirements.txt",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Run FastAPI dev server",
      "type": "shell",
      "command": "uvicorn src.main:app --reload --host 0.0.0.0 --port 3000 --reload-exclude 'venv' --reload-exclude '.venv' --reload-exclude '*.pyc' --reload-exclude '__pycache__' --reload-exclude '.git'",
      "isBackground": true,
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Port-forward PostgreSQL",
      "type": "shell",
      "command": "kubectl port-forward -n poltr deployment/allforone-postgres 5432:5432",
      "isBackground": true,
      "group": "none",
      "problemMatcher": []
    }
  ]
}
